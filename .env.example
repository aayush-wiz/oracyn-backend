# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://oracyn_user:oracyn_password@localhost:5432/oracyn_db

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-it-long-and-random
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-make-it-long-and-random
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Password Hashing
BCRYPT_ROUNDS=12

# Email Configuration (for production - configure your email service)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@oracyn.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,text/plain,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# LLM Backend URL (for future integration)
LLM_BACKEND_URL=http://localhost:8000
LLM_API_KEY=your-llm-api-key

# Security
COOKIE_SECRET=your-cookie-secret-change-in-production

# Health Check
HEALTH_CHECK_INTERVAL=30000

# Development
DEBUG_SQL=false
DEBUG_ROUTES=false
