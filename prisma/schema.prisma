generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  username  String
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  chats     Chat[]
  documents Document[]
}

model Chat {
  id        String     @id @default(uuid())
  title     String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages  Message[]
  documents Document[]
}

model Message {
  id        String   @id @default(uuid())
  sender    String
  text      String
  timestamp DateTime @default(now())
  chatId    String
  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
}

model Document {
  id         String   @id @default(uuid())
  fileName   String
  filePath   String
  fileType   String
  fileSize   Float
  uploadedAt DateTime @default(now())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  chatId     String
  chat       Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
}
